<header id="home">
  <div class="image-overlay">
    <div class="container">
      <div class="col-xs-12 intro animated fadeInDown">
        <div class="welcome-message">
          <img src="/landing/images/logo-light.png" alt="" class="logo">
          <div><%= tagLine %></div>
          <div class="subscribe">
            <form id="subscription" target="_blank" role="form" novalidate="true">
              <input id="mc-email" type="email" placeholder="your email address" name="EMAIL">
              <button type="submit"><span class="icon icon-location"></span></button>
            </form>
            <div class="followUs">
              <span>Follow us: </span>
              <ul class="social">
                <li><a target="_blank" href="https://twitter.com/yoorcity"><i class="icon-twitter"></i></a></li>
                <li><a target="_blank" href="https://www.facebook.com/yoorcity"><i class="icon-facebook"></i></a></li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</header>